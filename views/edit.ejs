<% include partials/header %>

<div class="container">
    <h1 style="text-align:center;">Edit <%=camp1.name%></h1>
    <div style="width:30%;margin:25px auto">
        <form method="POST" action="/campgrounds/<%=camp1._id%>?_method=PUT">
            <div class="form-group">
                <input class="form-control" type="text" name="campground1[name]"  value="<%=camp1.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground1[price]" min="0.00" step="0.1" value="<%=camp1.price%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground1[image]"  value="<%=camp1.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground1[location]"  value="<%=camp1.location%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground1[description]"  value="<%=camp1.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-md btn-block">Save</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
    
</div>
<% include partials/footer %>