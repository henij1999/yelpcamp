<% include partials/header %>

<div class="container">
    <h1 style="text-align:center;">Add new Comment to <%= camp.name %></h1>
    <div style="width:30%;margin:25px auto">
        <form method="POST" action="/campgrounds/<%=camp._id%>/comments">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]"  placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-md btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/<%=camp._id%>">Go Back</a>
    </div>
    
</div>
<% include partials/footer %>